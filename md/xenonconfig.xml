<?xml version="1.0" encoding="utf-8"?>
<mdscript name="xenonconfig">
<cues>	
  <cue name="EngageWave1" instantiate="false">
	<conditions>
	  <event_cue_signalled cue="md.Setup.Start" />
	  <check_value value="player.age ge 3h"/>	<!-- 3h -->
	  <debug_text text="'Xenon Wave1 set'" />				
	</conditions>
	<actions>		
	  <set_job_active job="'xenon_strike_craft_sa'" activate="true"/>	  
	  <debug_text text="'First Defenders activated'"/>
	</actions>
  </cue>
	
  <cue name="EngageWave2" instantiate="false">
	<conditions>
	  <event_cue_signalled cue="md.Setup.Start" />
	  <check_value value="player.age ge 5h"/> <!-- 5h -->
	  <debug_text text="'Xenon Wave2 set'" />				
	</conditions>
	<actions>			
	  <set_job_active job="'xenon_destroyers_sa'" activate="true"/>  
      <debug_text text="'Second Defenders activated'"/>
	</actions>
  </cue>		
	
  <cue name="EngageWave3" instantiate="false">
	<conditions>
	  <event_cue_signalled cue="md.Setup.Start" />
	  <check_value value="player.age ge 15h"/> <!-- 15h -->
	  <debug_text text="'Xenon Wave3 set'" />				
    </conditions>
	<actions>			
	  <set_job_active job="'xenon_battleship_sa'" activate="true"/>	  
	  <debug_text text="'Third Defenders activated'"/>
	</actions>
  </cue>	
</cues>
</mdscript>